  "name": "VoiceroAI",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "access_key",
      "label": "Access Key",
      "info": "Enter your VoiceroAI access key here. If left blank, the system will try to use the access key from your shop settings."
    }
  ]
}
{% endschema %} 